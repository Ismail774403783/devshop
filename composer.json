{
    "name": "devshop/cli",
    "description": "Command Line interface for DevShop",
    "require": {
        "symfony/console": "^4.3",
        "symfony/process": "^4.3",
        "knplabs/github-api": "^1.4",
        "symfony/filesystem": "^4.3",
        "cpliakas/git-wrapper": "1.*",
        "asm/php-ansible": "^2.0",
        "consolidation/robo": "^1",
        "mouf/nodejs-installer": "^1.0",
        "php": "^7.1"
    },
    "require-dev": {
        "toni/splitsh": "v1.0.1.4"
    },
    "authors": [
        {
            "name": "Jon Pugh",
            "email": "jon@thinkdrop.net"
        }
    ],
    "autoload": {
        "psr-0": { "DevShop": "src/" }
    },
    "bin": [
        "devshop"
    ],
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.2"
        },
        "sort-packages:": "true"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "bin/splitsh-install",
            "php -r \"copy('https://github.com/drush-ops/drush/releases/download/8.3.0/drush.phar', 'bin/drush');\"",
            "php -r \"chmod('bin/drush', 0755);\"",
            "drush --version"
        ]
    }
}
